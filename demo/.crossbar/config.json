{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "riichi",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "io.github.summivox.riichi.*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8000
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../web"
                  },
                  "ws": {
                     "type": "websocket",
                     "options": {
                       "auto_ping_interval": "5000",
                       "auto_ping_timeout": "5000",
                       "compression": {
                         "deflate": {
                           "request_no_context_takeover": false,
                           "request_max_window_bits": 11,
                           "no_context_takeover": false,
                           "max_window_bits": 11,
                           "memory_level": 4
                         }
                       }
                     }
                  }
               }
            }
         ]
      },
      {
         "type": "guest",
         "executable": "node",
         "arguments": ["index.js"],
         "options": {
            "workdir": "../server",
            "watch": {
               "directories": ["../server"],
               "action": "restart"
            },
            "env": {
              "inherit": true,
              "vars": {
                "DEBUG": "*"
              }
            }
         }
      }
   ]
}
